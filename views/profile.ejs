<%- include header %>
<div class="page-header">
      <h1>Profile<small> View information about you accessible by others</small></h1>
</div>

<div class="row">
    <div class="col-md-6">
        <form>
          <div class="form-group">
            <label>Full Name</label>
            <%= user.fullname %>
          </div>
          <div class="form-group">
            <label>Username</label>
            <%= user.local.username %>
          </div>
          <div class="form-group">
            <label>Email address</label>
            <%= user.local.email %>
          </div>
        </form>
    </div>
</div>

<div class="page-header">
      <h1>Shares<small>Shared projects</small></h1>
</div>

<div class="row">
    <% for(var i = 0; i < songs.length; i++) { %>
          <div class="col-sm-6 col-md-4">
              <div class="caption">
                <h3><%= songs[i].title %></h3>
                <p><strong><%= songs[i].username %></strong> shared with you <strong><%= songs[i].title %></strong> on <strong><%= songs[i].sharedAt %></strong></p>
                <p>
                    <a href="/play/<%= songs[i].title %>" class="btn btn-primary" role="button">Goto Song</a>
                </p>
              </div>
          </div>
    <% } %>
</div>


<%- include footer %>
