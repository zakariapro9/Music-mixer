<%- include header %>

<div class="page-header">
      <h1>Explore<small> Music shared in the community</small></h1>
</div>

<div class="row">
    <% for(var i = 0; i < songs.length; i++) { %>
          <div class="col-sm-6 col-md-4">
              <div class="caption">
                <h3><%= songs[i].title %></h3>
                <p><strong><a href="/profile/<%= songs[i].username %>"><%= songs[i].username %></a></strong> shared with you <strong><%= songs[i].title %></strong> on <strong><%= songs[i].sharedAt %></strong></p>
                <p>
                    <a href="/play/<%= songs[i].title %>" class="btn btn-primary" role="button">Goto Song</a>
                </p>
              </div>
          </div>
    <% } %>
</div>


<%- include footer %>
